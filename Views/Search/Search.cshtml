@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApplication3.Models.Doctor
@model IEnumerable<Doc>
<!DOCTYPE html>
@{
    ViewBag.Title = "Search";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<table class="table">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Специальность</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Name</td>
                    <td>@doctor.Profession</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Врачи не найдены</td>
            </tr>
        }
    </tbody>
</table>